<p id="notice"><%= notice %></p>

<h1>Áreas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Código</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.area_name %></td>
        <td><%= area.area_code %></td>
        <td><%= link_to area do %>
          <i class="fas fa-eye"></i>
          <%end %>
        </td>
        
        <td><%= link_to edit_area_path(area) do %>
            <i class="far fa-edit"></i>
          <%end %>
        </td>

        <td><%= link_to  area, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <%end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

