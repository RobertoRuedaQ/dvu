<div class="row">
  <div class="col-md-3">
    <h1>Áreas</h1>
  </div>
  <div class="col-md-3"></div>
  <div class="col-md-3"></div>
  <div class="col-md-3">
    <%= link_to 'Registrar Nueva Área', new_area_path, class: "btn btn-outline-success" %>
  </div>
</div>

<table class="table table-hover table-responsive-sm">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Código</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.area_name %></td>
        <td><%= area.area_code %></td>
        <td><%= link_to area do %>
          <i class="fas fa-eye"></i>
          <%end %>
        </td>
        
        <td><%= link_to edit_area_path(area) do %>
            <i class="far fa-edit"></i>
          <%end %>
        </td>

        <td><%= link_to  area, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <%end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>