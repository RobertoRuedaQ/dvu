<div class="row">
  <div class="col-md-3">
    <h1>Tipos de actividades</h1>
  </div>
  <div class="col-md-3"></div>
  <div class="col-md-3"></div>
  <div class="col-md-3">
    <%= link_to 'Registrar Nuevo Tipo de Actividad', new_type_path, class: "btn btn-outline-success" %>
  </div>
</div>

<table class="table table-hover table-responsive-sm">
  <thead>
    <tr>
      <th>Nombre</th>
