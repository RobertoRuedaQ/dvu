<div class="row">
  <div class="col-md-3">
    <h1>Gastos</h1>
  </div>
  <div class="col-md-3"></div>
  <div class="col-md-3"></div>
  <div class="col-md-3">
    <%= link_to 'Registrar Nuevo Gasto', new_expense_path, class: "btn btn-outline-success" %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Tipo de gasto</th>
      <th>Tipo de cliente</th>
      <th>Nombre de cliente</th>
      <th># de factura</th>
      <th>Código SIAF</th>
      <th>Monto</th>
      <th>Caja Menor</th>
      <th>Rubro</th>
      <th>Descripción</th>
      <th>Fecha</th>
      <th>Actividad Vinculada</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.expense_type %></td>
        <td><%= expense.client_type %></td>
        <td><%= expense.name %></td>
        <td><%= expense.bill_number %></td>
        <td><%= expense.siaf_code %></td>
        <td><%= number_to_currency(expense.amount, precision: 0) %></td>
        <td><%= petty_cash(expense.petty_cash) %></td>
        <td><%= expense.budget.item %></td>
        <td><%= expense.description %></td>
        <td><%= expense.date %></td>
        <td><%= expense.activity.activity_name %></td>
        <td><%= link_to expense do %>
          <i class="fas fa-eye"></i>
          <%end %>
        </td>
        
        <td><%= link_to edit_expense_path(expense) do %>
            <i class="far fa-edit"></i>
          <%end %>
        </td>

        <td><%= link_to  expense, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <%end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>