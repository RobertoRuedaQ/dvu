<p id="notice"><%= notice %></p>

<h1>Expenses</h1>

<table>
  <thead>
    <tr>
      <th>Expense type</th>
      <th>Client type</th>
      <th>Name</th>
      <th>Bill number</th>
      <th>Siaf code</th>
      <th>Amount</th>
      <th>Budget</th>
      <th>Description</th>
      <th>Date</th>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.expense_type %></td>
        <td><%= expense.client_type %></td>
        <td><%= expense.name %></td>
        <td><%= expense.bill_number %></td>
        <td><%= expense.siaf_code %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.budget %></td>
        <td><%= expense.description %></td>
        <td><%= expense.date %></td>
        <td><%= expense.activity_id %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

