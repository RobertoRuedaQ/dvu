<p id="notice"><%= notice %></p>

<h1>Gastos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Tipo de gasto</th>
      <th>Tipo de cliente</th>
      <th>Nombre de cliente</th>
      <th># de factura</th>
      <th>Código SIAF</th>
      <th>Monto</th>
      <th>Rubro</th>
      <th>Descripción</th>
      <th>Fecha</th>
      <th>Actividad Vinculada</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.expense_type %></td>
        <td><%= expense.client_type %></td>
        <td><%= expense.name %></td>
        <td><%= expense.bill_number %></td>
        <td><%= expense.siaf_code %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.budget %></td>
        <td><%= expense.description %></td>
        <td><%= expense.date %></td>
        <td><%= expense.activity_id %></td>
        <td><%= link_to expense do %>
          <i class="fas fa-eye"></i>
          <%end %>
        </td>
        
        <td><%= link_to edit_expense_path(expense) do %>
            <i class="far fa-edit"></i>
          <%end %>
        </td>

        <td><%= link_to  expense, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <%end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

