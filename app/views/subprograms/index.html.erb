<h1>Subprogramas</h1>

<div class="row">
  <div class="col-md-3">
    <h1>Subprogramas</h1>
  </div>
  <div class="col-md-3"></div>
  <div class="col-md-3"></div>
  <div class="col-md-3">
    <%= link_to 'Registrar Nuevo Subprograma', new_subprogram_path, class: "btn btn-outline-success" %>
  </div>
</div>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>CÃ³digo</th>
      <th>Programa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subprograms.each do |subprogram| %>
      <tr>
        <td><%= subprogram.subprogram_name %></td>
        <td><%= subprogram.subprogram_code %></td>
        <td><%= subprogram.program.program_name %></td>
        <td><%= link_to subprogram do %>
          <i class="fas fa-eye"></i>
          <%end %>
        </td>
        
        <td><%= link_to edit_subprogram_path(subprogram) do %>
            <i class="far fa-edit"></i>
          <%end %>
        </td>

        <td><%= link_to  subprogram, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <%end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

