<div class="container">
  <div class="jumbotron">
    <form action="" class="form-inline row">
     <%= form_with(url: "activities_path", method:"get", local: true ) do |form| %>
     <div class="form-group col-md-3">
       <strong><%= form.label :area_id, "Área" %></strong>
       <%= form.collection_select :area_id, @area, :id, :area_name, prompt: "Escoge uno", value: params[:area_id],  class:"form-control form-control-sm form-inline" %>
     </div>
     <div class="form-group col-md-3">
       <strong><%= form.label :type_id, "Tipo de actividad" %></strong>
       <%= form.collection_select :type_id, @type, :id, :type_name, prompt:"Escoge uno", value: params[:type_id], class:"form-control form-control-sm form-inline" %>
     </div>
     <div class="form-group col-md-2">
       <strong><%= form.label :program_id, "Programa" %></strong>
       <%= form.collection_select :program_id, @program, :id, :program_name, prompt:"Escoge uno", value: params[:program_id], class:"form-control form-control-sm form-inline" %>
     </div>
     <div class="form-group col-md-1">
      <strong><%= form.label :month, "Mes" %></strong>
      <%= form.select :month, 1..12, value: params[:date], class:"form-control form-control-sm form-inline" %>
    </div>
     <div class="form-group col-md-1">
       <%= form.submit "filtrar", class: "btn btn-outline-dark"   %>
     </div>
     <%end %>
   </form>
 </div>
</div>