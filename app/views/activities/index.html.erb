<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table>
  <thead>
    <tr>
      <th>Activity name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Campu</th>
      <th>Place</th>
      <th>Type</th>
      <th>Area</th>
      <th>Subarea</th>
      <th>Action</th>
      <th>Program</th>
      <th>Subprogram</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.activity_name %></td>
        <td><%= activity.start_date %></td>
        <td><%= activity.end_date %></td>
        <td><%= activity.campu_id %></td>
        <td><%= activity.place_id %></td>
        <td><%= activity.type_id %></td>
        <td><%= activity.area_id %></td>
        <td><%= activity.subarea_id %></td>
        <td><%= activity.action_id %></td>
        <td><%= activity.program_id %></td>
        <td><%= activity.subprogram_id %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

