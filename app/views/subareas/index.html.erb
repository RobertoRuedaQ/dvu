<div class="row">
  <div class="col-md-3">
    <h1>Subárea</h1>
  </div>
  <div class="col-md-3"></div>
  <div class="col-md-3"></div>
  <div class="col-md-3">
    <%= link_to 'Registrar Nueva Subárea', new_subarea_path, class: "btn btn-outline-success" %>
  </div>
</div>

<table class="table table-hover table-responsive-sm">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Código</th>
      <th>Área</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subareas.each do |subarea| %>
      <tr>
        <td><%= subarea.subarea_name %></td>
        <td><%= subarea.subarea_code %></td>
        <td><%= subarea.area.area_name %></td>
        <td><%= link_to subarea do %>
          <i class="fas fa-eye"></i>
          <%end %>
        </td>
        
        <td><%= link_to edit_subarea_path(subarea) do %>
            <i class="far fa-edit"></i>
          <%end %>
        </td>

        <td><%= link_to  subarea, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <%end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>