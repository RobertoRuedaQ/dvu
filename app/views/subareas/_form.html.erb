  </div>

  <div class="form-group col-md-3">
    <%= form.label :subarea_code,"Código Subárea" %>
    <%= form.text_field :subarea_code, class: "form-control" %>
  </div>

  <div class="form-group col-md-3">
    <%= form.label :area, "Área" %>
    <%= form.collection_select :area_id, @area, :id, :area_name, prompt: "Elige una área" %>
  </div>
</div>


  <div class="actions">
    <%= form.submit "Registrar", class: "btn btn-outline-dark" %>
  </div>
<% end %>
