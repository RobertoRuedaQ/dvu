<div class="row">
  <div class="col-md-3">
    <h1>Presupuesto</h1>
  </div>
  <div class="col-md-3"></div>
  <div class="col-md-3"></div>
  <div class="col-md-3">
    <%= link_to 'Registrar Nuevo Rubro', new_budget_path, class: "btn btn-outline-success" %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Rubro</th>
      <th>Cuenta</th>
      <th>Departamento</th>
      <th>Monto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= budget.item %></td>
        <td><%= budget.account %></td>
        <td><%= budget.department %></td>
        <td><%= number_to_currency(budget.amount, precision: 0) %></td>
        <td><%= link_to budget do %>
          <i class="fas fa-eye"></i>
          <%end %>
        </td>
        
        <td><%= link_to edit_budget_path(budget) do %>
            <i class="far fa-edit"></i>
          <%end %>
        </td>

        <td><%= link_to  budget, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <%end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>