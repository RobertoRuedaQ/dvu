<p id="notice"><%= notice %></p>

<h1>Lista de Reportes</h1>

<table class="table table-hover table-responsive-sm">
  <thead>
    <tr>
      <th>Actividad</th>
      <th>Acuerdo</th>
      <th>Objetivos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.activity.activity_name %></td>
        <td><%= report.commitment %></td>
        <td><%= report.objetive %></td>
        <td><%= link_to report do %>
          <i class="fas fa-eye"></i>
        <%end %>
        </td>
        <% if report.activity.user == current_user %>
          <td><%= link_to edit_report_path(report) do %>
            <i class="far fa-edit"></i>
          <%end %>
          </td>
          <td><%= link_to report, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <%end %>
          </td>
        <%end %>
      </tr>
    <% end %>
  </tbody>
</table>