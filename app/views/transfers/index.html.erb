<div class="row">
  <div class="col-md-3">
    <h1>Traslados</h1>
  </div>
  <div class="col-md-3"></div>
  <div class="col-md-3"></div>
  <div class="col-md-3">
    <%= link_to 'Registrar Nuevo Traslado', new_transfer_path, class: "btn btn-outline-success" %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Descripción</th>
      <th>De</th>
      <th>Para</th>
      <th>Monto</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transfers.each do |transfer| %>
      <tr>
        <td><%= transfer.description %></td>
        <td><%= transfer.sender.item %></td>
        <td><%= transfer.receiver.item %></td>
        <td><%= number_to_currency(transfer.amount, precision: 0) %></td>
        <td><%= transfer.date %></td>
        <td><%= link_to transfer do %>
          <i class="fas fa-eye"></i>
          <%end %>
        </td>
        
        <td><%= link_to edit_transfer_path(transfer) do %>
            <i class="far fa-edit"></i>
          <%end %>
        </td>

        <td><%= link_to  transfer, method: :delete, data: { confirm: '¿Está seguro de querer eliminar esta transferencia?' } do %>
            <i class="far fa-trash-alt"></i>
          <%end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>