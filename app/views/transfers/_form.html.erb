<%= form_with(model: transfer, local: true) do |form| %>
  <% if transfer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(transfer.errors.count, "error") %> prohibited this transfer from being saved:</h2>
      <ul>
        <% transfer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-row">
  <div class="form-group col-md-6">
    <%= form.label :sender_id, "De" %>
    <%= form.collection_select :sender_id, @budget, :id, :item, prompt: "Elige una área" %>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :receiver_id, "Para" %>
    <%= form.collection_select :receiver_id, @budget, :id, :item, prompt: "Elige una área" %>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-6">
    <%= form.label :amount,"Monto" %>
    <%= form.number_field :amount, class: "form-control" %>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :date,"Fecha del translado" %>
    <%= form.datetime_select :date, class: "form-control" %>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-md-8">
    <%= form.label :description, "Descripción" %>
    <%= form.text_area :description, class: "form-control form-control-lg", row: 3 %>
  </div>
</div>


  <div class="actions">
    <%= form.submit "Registrar" %>
  </div>
<% end %>
