<div class="row">
  <div class="col-md-3">
    <h1>Programas</h1>
  </div>
  <div class="col-md-3"></div>
  <div class="col-md-3"></div>
  <div class="col-md-3">
    <%= link_to 'Registrar Nuevo Programa', new_program_path, class: "btn btn-outline-success" %>
  </div>
</div>
<table class="table table-hover table-responsive-sm">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>CÃ³digo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.program_name %></td>
        <td><%= program.program_code %></td>
        <td><%= link_to program do %>
          <i class="fas fa-eye"></i>
          <%end %>
        </td>
        
        <td><%= link_to edit_program_path(program) do %>
            <i class="far fa-edit"></i>
          <%end %>
        </td>

        <td><%= link_to  program, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <%end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

