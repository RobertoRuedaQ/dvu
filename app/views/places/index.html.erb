<h1>Lugares</h1>
<div class="row">
  <div class="col-md-3">
    <h1>Lugares</h1>
  </div>
  <div class="col-md-3"></div>
  <div class="col-md-3"></div>
  <div class="col-md-3">
    <%= link_to 'Registrar Nuevo Lugar', new_place_path, class: "btn btn-outline-success" %>
  </div>
</div>

<table class="table table-hover table-responsive-sm">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Capacidad</th>
      <th>Sede</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.place_name %></td>
        <td><%= place.capacity %></td>
        <td><%= place.campus.campus_name %></td>
        <td><%= link_to place do %>
          <i class="fas fa-eye"></i>
          <%end %>
        </td>
        
        <td><%= link_to edit_place_path(place) do %>
            <i class="far fa-edit"></i>
          <%end %>
        </td>

        <td><%= link_to  place, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="far fa-trash-alt"></i>
          <%end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>